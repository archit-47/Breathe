<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Recipient Form</h1>
        <div style="width:30%; margin:2% auto">
            <form action="/recipients" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="userID" placeholder="Enter userID" required>    
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="password" class="form-control" name="password" placeholder="Enter Password" required>    
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Blood_Grp" placeholder="Enter Blood Group of Recipient" required>
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="Organ" placeholder="Enter the organ Recipient require" required>    
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="city" placeholder="Enter city of Recipient" required>    
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>    
                </div>
            </form>
            
        <a href="/">Go Back</a>
        </div>
    </div>
</div>
